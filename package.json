{
  "name": "isay-backend",
  "version": "0.0.1",
  "description": "iSay backend server",
  "repository": {
    "type": "git",
    "url": "https://github.com/vadimf/iSay-Backend.git"
  },
  "author": "Matthew Michalsky",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run copy-static-assets && npm run build-sass",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass-main\" \"npm run watch-sass-legal\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "npm run build-sass-main && npm run build-sass-legal",
    "build-sass-main": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "build-sass-legal": "node-sass src/public/css/legal.scss dist/public/css/legal.css",
    "watch-sass-main": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch-sass-legal": "node-sass -w src/public/css/legal.scss dist/public/css/legal.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "npm run build && nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "document": "apidoc -i ./src/ -o ./dist/public/api/"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "modupm2leFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/dateformat": "^1.0.1",
    "@types/mongoose": "^4.7.29",
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-mongo": "^1.3.2",
    "dateformat": "^3.0.3",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.16.2",
    "express-async-errors": "^2.1.1",
    "express-flash": "^0.0.2",
    "express-validator": "^3.2.1",
    "facebookgraph": "^0.3.0",
    "file-type": "^7.4.0",
    "firebase-admin": "^5.5.1",
    "gifify": "^2.4.0",
    "he": "^1.1.1",
    "helmet": "^3.9.0",
    "lodash": "^4.17.4",
    "lusca": "^1.5.2",
    "mongoose": "^4.13.7",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "node-crashlytics": "0.0.4",
    "node-ffprobe": "^1.2.2",
    "nodemailer": "^2.7.2",
    "passport": "0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.4",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sharp": "^0.18.4",
    "stream-buffers": "^3.0.1",
    "stream-to-buffer": "^0.1.0",
    "time-ago": "^0.2.1",
    "twilio": "^3.11.0",
    "typed-promisify": "^0.4.0",
    "underscore": "^1.8.3",
    "web-request": "^1.0.7"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.32",
    "@types/dotenv": "^2.0.23",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.39",
    "@types/express-session": "0.0.32",
    "@types/facebook-js-sdk": "^2.8.3",
    "@types/file-type": "^5.2.1",
    "@types/he": "^0.5.29",
    "@types/helmet": "0.0.37",
    "@types/jest": "^19.2.2",
